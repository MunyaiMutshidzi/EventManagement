@model IEnumerable<Event>
@{
   ViewData["Title"] = "Home";
}

<div class="rounded text-center text-light bg-primary p-5 my-3">
    <h1>Welcome to the Event Management System</h1>
    <p>Find and register for awesome events happening near you!</p>
</div>

<h3 class="text-primary">Upcoming Events</h3>
@* 
checks if the are event, the populate late them *@
@if (Model.Any())
{
    <table class="table table-bordered">
        <tbody>
            @foreach (var Event in  Model)
            {
                <tr>
                    <td>
                        <h4>@Event.EventTitle</h4> @* Event Title *@
                        <div>@Event.EventStartDate</div> @* Event Start Date *@
                        <a 
                            asp-controller="Event"
                           asp-action="Details"
                           asp-route-id="@Event.EventId"
                           class="btn btn-primary my-3">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No upcoming events found at this time.</p>
}
